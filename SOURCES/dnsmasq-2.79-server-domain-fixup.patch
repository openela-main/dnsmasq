-	 free(sd);
-       }
-      else {
-        up = &sd->next;
-        if (sd->last_server && (sd->last_server->flags & SERV_MARK))
-	  sd->last_server = NULL;
-      }
-    }
-}
-
 void add_update_server(int flags,
 		       union mysockaddr *addr,
 		       union mysockaddr *source_addr,
@@ -1849,7 +1851,6 @@ void check_servers(void)
 	up = &sfd->next;
     }
   
-  server_domains_cleanup();
   cleanup_servers();
 }
 
